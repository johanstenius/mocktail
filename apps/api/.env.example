# Database
DATABASE_URL="postgresql://user:password@localhost:5432/mockspec"

# App URLs
APP_URL="http://localhost:3000"
API_URL="http://localhost:4000"

# Auth (generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET=

# Admin (generate with: openssl rand -base64 32)
ADMIN_SECRET=

# Feature Flags (all default to false)
BILLING_ENABLED=false
EMAIL_ENABLED=false
PROXY_ENABLED=false

# Stripe (required if BILLING_ENABLED=true)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRO_PRICE_ID=price_xxx

# Email (required if EMAIL_ENABLED=true)
RESEND_API_KEY=re_xxx

# OAuth - Google
GOOGLE_CLIENT_ID=xxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=xxx

# OAuth - GitHub
GITHUB_CLIENT_ID=xxx
GITHUB_CLIENT_SECRET=xxx

# Sentry (optional)
SENTRY_DSN=
